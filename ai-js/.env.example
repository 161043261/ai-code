# Server
PORT=8081
API_PREFIX=/api

# LLM Provider: ollama (default), dashscope
LLM_PROVIDER=ollama

# Ollama (Local) - Default
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# DashScope (Cloud) - Optional
DASHSCOPE_API_KEY=https://bailian.console.aliyun.com/cn-beijing/tab=home?tab=app#/api-key
DASHSCOPE_CHAT_MODEL=deepseek-v3.2
DASHSCOPE_EMBEDDING_MODEL=text-embedding-v1

# BigModel (MCP) - Optional
BIGMODEL_API_KEY=https://bigmodel.cn/usercenter/proj-mgmt/apikeys

# Vector Store (Persistent)
VECTOR_DB_PATH=./data/vectors.db
