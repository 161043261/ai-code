# Server
PORT=8081
API_PREFIX=/api

# LLM Provider: ollama (default) | dashscope
LLM_PROVIDER=ollama

# Ollama (Local) - Default
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# DashScope (Cloud) - Optional
DASHSCOPE_API_KEY=your_dashscope_api_key
DASHSCOPE_CHAT_MODEL=qwen-max
DASHSCOPE_EMBEDDING_MODEL=text-embedding-v4

# BigModel (MCP) - Optional
BIGMODEL_API_KEY=your_bigmodel_api_key

# Vector Store (Persistent)
VECTOR_DB_PATH=./data/vectors.db
